{
  "name": "Better review",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Better review extension for GitHub PR",
  "homepage_url": "https://github.com/netguru-hackathon/better-review",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.js",
      "src/bg/background.js",
      "js/main.js",
      "js/api.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "src/options/index.html",
    "chrome_style": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": [
        "src/inject/inject.js",
        "js/main.js",
        "js/api.js",
        "js/jquery/jquery.js"
      ]
    }
  ]
}
